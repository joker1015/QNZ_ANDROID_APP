<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2D84F3" >

    <ImageView
        android:id="@+id/common_title_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/title_back_test" />

    <ImageView
        android:id="@+id/common_title_share_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/title_share_test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/common_title_share_iv"
        android:layout_toRightOf="@id/common_title_back_iv"
        android:gravity="center"
        android:singleLine="true"
        android:text="九月初九 限时抢购"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_textsize18sp" />

</RelativeLayout>